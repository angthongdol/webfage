    </div>

    <script>
        function showPDF() {
            const pdfFrame = document.getElementById("pdfFrame");
            const selectedPDF = document.getElementById("monthSelect").value;

            if (selectedPDF) {
                pdfFrame.src = selectedPDF;
            } else {
                pdfFrame.src = "";
            }
        }
    </script>
