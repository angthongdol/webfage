    <div class="container">
        <label for="monthSelect">เลือกเดือน:</label>
        <select id="monthSelect" onchange="showPDF()">
            <option value="">-- กรุณาเลือกเดือน --</option>
            <option value="pdf/january.pdf">มกราคม</option>
            <option value="pdf/february.pdf">กุมภาพันธ์</option>
